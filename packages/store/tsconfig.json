{
  "extends": "@hgpt/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
